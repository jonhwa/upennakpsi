<%= form_for [refinery, :pledge_classes_admin, @pledge_class] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @pledge_class,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.pledge_classes.admin.pledge_classes.pledge_class'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @pledge_class.name) -%>
<% end -%>
