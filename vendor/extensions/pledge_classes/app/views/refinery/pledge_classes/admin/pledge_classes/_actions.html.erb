<ul>
  <% if ::Refinery::PledgeClasses::Admin::PledgeClassesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.pledge_classes_admin_pledge_classes_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_pledge_classes_admin_pledge_class_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::PledgeClasses::Admin::PledgeClassesController.sortable? && ::Refinery::PledgeClasses::PledgeClass.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Pledge Classes"),
                 refinery.pledge_classes_admin_pledge_classes_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Pledge Classes"),
                 refinery.pledge_classes_admin_pledge_classes_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
