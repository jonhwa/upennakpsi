<%= form_for [refinery, :brothers_admin, @brother] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @brother,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :first_name -%>
    <%= f.text_field :first_name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :last_name -%>
    <%= f.text_field :last_name -%>
  </div>

  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @brother.photo,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.brothers.admin.brothers.brother'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @brother.first_name) -%>
<% end -%>
