<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(brother) -%>">
  <span class='title'>
    <%= brother.first_name %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.brothers_brother_path(brother),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_brothers_admin_brother_path(brother),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.brothers_admin_brother_path(brother),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => brother.first_name),
        :method => :delete %>
  </span>
</li>
