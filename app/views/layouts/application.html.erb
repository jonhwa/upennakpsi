<!DOCTYPE html>
<html>
<head>
    <title><%= page_title %></title>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Libre+Baskerville:400,400italic" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js" %>
    <%= javascript_include_tag "http://cloud.github.com/downloads/malsup/cycle/jquery.cycle.all.latest.js" %>
    <%= csrf_meta_tags %>
</head>
<body>

<body>
    <div id="container">
        <header id="header">
            <div id="login">
                <a href="powertriangle.php">Login</a>
            </div>

            <div id="crestlogo">
                <%= link_to(image_tag('akpsilogo.png', :alt => 'Alpha Kappa Psi'), root_path) %>
                <p>
                    <span>University of <br>Pennsylvania</span>
                    <span id="comma">,</span>
                    <span>Epsilon Rho <br>Chapter</span>
                </p>
            </div>

            <!-- Navigation menu -->
            <%= render :partial => '/refinery/menu' %>
        </header>

        <!-- Breadcrumbs, only if NOT home page -->
        <% unless current_page?('/') %>
            <section id="menu" class="content">
                <%= link_to 'Alpha Kappa Psi', '/' %> &#187; 
                <%= link_to @page.root.title, @page.root.url %> &#187;
                <span class="current"><%= page_title %></span>
            </section>
        <% end %>

        <!-- Page content -->
        <%= yield %>
        
        <!-- Footer -->
        <div id="footer">
            <span>&copy; Alpha Kappa Psi 2013 | Jonathan Hwa &amp; Connie Yuan</span>
        </div>
    </div>
</body>
</html>